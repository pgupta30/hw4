<h1 class="mb-5"><%= @place["name"] %></h1>

<h2>My Posts</h2>
<div class="row">
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6 mt-4">
    <h3><%= post["title"] %></h3>
    <h4><%= post["posted_on"] %></h4>
    <p><%= post["description"] %></p>
  </div>
  <% end %>
  
</div>
<p>
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a class="btn btn-primary" href="/places">Back to All Places</a>
</p>

